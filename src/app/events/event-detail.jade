    ion-list.participants
      ion-item.item-divider
        p participants
      ion-item.participants.item-avatar-list
        div.avatar-wrap
          img.item-image.ink(
            ng-src="{{host.face}}"
            ng-click="$event.stopImmediatePropagation()"
            ui-sref="app.profile({id: '{{host.id}}' })"
          )
